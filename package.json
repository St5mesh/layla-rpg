{
  "name": "layla-rpg",
  "version": "1.0.0",
  "description": "A modular, extensible RPG engine for the Layla agent platform. Provides HTTP endpoints for RPG gameplay.",
  "main": "dist/src/apiServer.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/apiServer.ts",
    "test": "jest",
    "test:unit": "jest rpgEngine.test.ts",
    "test:integration": "jest apiServer.integration.test.ts",
    "test:watch": "jest --watch",
    "simulate": "ts-node examples/simulateLaylaRequest.ts",
    "env:setup": "powershell -ExecutionPolicy Bypass -File setup-environment.ps1",
    "env:validate": "powershell -ExecutionPolicy Bypass -File validate-simple.ps1",
    "pretest": "powershell -ExecutionPolicy Bypass -File validate-simple.ps1",
    "postinstall": "powershell -ExecutionPolicy Bypass -File validate-simple.ps1 || echo 'Environment validation completed with warnings'"
  },
  "keywords": ["rpg", "layla", "agent", "game"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.2",
    "express": "^5.2.1",
    "jest": "^30.2.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
